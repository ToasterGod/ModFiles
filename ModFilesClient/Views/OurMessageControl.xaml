<UserControl x:Class="ModFilesClient.Views.OurMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModFilesClient.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ListBox x:Name="listBox" Height="100" Width="120" ItemsSource="{Binding Mods}" SelectedItem="{Binding SelectedMod}" />
        <TextBox x:Name="textBox" TextWrapping="Wrap" Width="120" Text="{Binding SelectedMod}" />
        <Button x:Name="button" Content="Ok" Width="120" Command="{Binding GetCommand}" />
    </StackPanel>
</UserControl>